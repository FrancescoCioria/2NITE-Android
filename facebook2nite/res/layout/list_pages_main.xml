<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@layout/gradient_item"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewListPages"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/imageViewPage"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="hello"
            android:textColor="@color/dark_dark_gray"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewPage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@color/light_gray"
            android:padding="0.5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_other_events" />

        <ImageView
            android:id="@+id/imageViewTriangle"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="51dp"
            android:scaleType="centerCrop"
            android:src="@drawable/triangle" />

        <ImageView
            android:id="@+id/imageViewArrow"
            android:layout_width="10dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56.5dp"
            android:layout_marginRight="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow" />

        <RelativeLayout
            android:id="@+id/imageViewSelected"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@layout/imageview_selected" >
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>