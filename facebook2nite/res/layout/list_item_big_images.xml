<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayoutListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:id="@+id/controlViewTop"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/sfondo" />

        <RelativeLayout
            android:id="@+id/RealativeListEvent"
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:background="@color/sfondo"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/textGraySeparator"
                android:layout_width="0.1dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent" />

            <View
                android:id="@+id/viewShadow"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/gradient_shadow"
                android:visibility="gone" />

            <View
                android:id="@+id/controlViewBottom"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp" />

            <LinearLayout
                android:id="@+id/layoutPicturePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageViewListLayout"
                android:layout_alignTop="@+id/imageViewListLayout"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/android_gray"
                android:orientation="vertical"
                android:padding="0.1dp" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/imageViewListLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/background_light"
                android:orientation="vertical"
                android:padding="0dp" >

                <ImageView
                    android:id="@+id/imageViewList"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/standard_image" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/light_gray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="1.5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <TextView
                        android:id="@+id/textViewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:orientation="vertical"
                        android:text="MOSTRA SPORTIVA @ ACROPOLIS"
                        android:textColor="@color/dark_gray"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="Vivir y estudiar en Valencia no es suficiente, hay que aprovechar al máximo esta oportunidad y conocer a fondo la ciudad: Nosotros te lo ponemos fácil! Vamos de paseo por el centro histórico para descubrir su origen y su historia durante 2 horas."
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp"
                        android:typeface="sans"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textViewAttending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:maxLines="1"
                            android:paddingRight="5dp"
                            android:text="Going: "
                            android:textColor="@color/dark_gray"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/textViewPage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@+id/textViewAttending"
                            android:gravity="right"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:text="Luogo magico"
                            android:textColor="@color/dark_gray"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:typeface="sans"
                            android:visibility="visible" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewTriangleAttending"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/imageViewListLayout"
                android:src="@drawable/triangle_red"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewTextNew"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="104dp"
                android:background="@color/black_alpha_strong"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:orientation="vertical"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="ELECTROBE @ ACROPOLIS"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/bottomGray"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@color/sfondo"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:id="@+id/listItemSelector"
        android:layout_width="fill_parent"
        android:layout_height="202dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0.5dp"
        android:layout_marginRight="10dp"
        android:background="@layout/imageview_selected"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageViewParentPage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/listItemSelector"
        android:layout_margin="8dp"
        android:background="@android:color/background_light"
        android:contentDescription="@android:drawable/alert_light_frame"
        android:maxWidth="100dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_other_events"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBarImageEventList"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

</RelativeLayout>