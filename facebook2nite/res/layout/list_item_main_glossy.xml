<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayoutListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/LayoutFilter"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@color/white_alpha_soft"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/spinnerPagesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@layout/imageview_selected"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/spinnerPages"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:text="All Pages"
                        android:textColor="@color/light_light_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageViewTriangleSpinner2"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="1dp"
                            android:layout_toRightOf="@+id/textViewGrayLine345"
                            android:layout_weight="1"
                            android:src="@drawable/triangle_spinner" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/spinnerFilterLayout"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@layout/imageview_selected"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/spinnerFilter"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:text="All Events"
                        android:textColor="@color/light_light_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageViewTriangleSpinner2"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="1dp"
                            android:layout_toRightOf="@+id/textViewGrayLine345"
                            android:layout_weight="1"
                            android:src="@drawable/triangle_spinner" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewGrayLine345"
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>

        <View
            android:id="@+id/controlViewTop"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white_alpha_strong" />

        <RelativeLayout
            android:id="@+id/LayoutSeparatorTop"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white_alpha_soft"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/textViewSeparatorDay"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/red"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:text="Wednesday"
                android:textColor="@color/light_light_gray"
                android:textSize="15sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/textViewSeparatorMonth"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textViewSeparatorDay"
                android:background="@color/red"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:text="Jul 11"
                android:textColor="@color/light_light_gray"
                android:textSize="15sp"
                android:textStyle="italic|bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RealativeListEvent"
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:background="@color/white_alpha_strong"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textGraySeparator"
                android:layout_width="0.1dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent" />

            <View
                android:id="@+id/viewShadow"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/gradient_shadow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageViewTriangleAttending"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/imageViewListLayout"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="0.5dp"
                android:src="@drawable/triangle_red"
                android:visibility="visible" />

            <View
                android:id="@+id/controlViewBottom"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp" />

            <LinearLayout
                android:id="@+id/layoutPicturePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageViewListLayout"
                android:layout_alignTop="@+id/imageViewListLayout"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/android_gray"
                android:orientation="vertical"
                android:padding="0.1dp" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/imageViewListLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:padding="0dp" >

                <ImageView
                    android:id="@+id/imageViewList"
                    android:layout_width="fill_parent"
                    android:layout_height="125dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/standard_image" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0.5dp"
                    android:orientation="vertical"
                    android:paddingBottom="1.5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <TextView
                        android:id="@+id/textViewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:orientation="vertical"
                        android:text="MOSTRA   @ ACROPOLIS"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1.5dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:orientation="vertical"
                        android:text="Vivir y estudiar en Valencia no es suficiente, hay que aprovechar al máximo esta oportunidad y conocer a fondo la ciudad: Nosotros te lo ponemos fácil! Vamos de paseo por el centro histórico para descubrir su origen y su historia durante 2 horas."
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:typeface="sans"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textViewAttending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:maxLines="1"
                            android:paddingRight="5dp"
                            android:text="Going: "
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/textViewPage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@+id/textViewAttending"
                            android:gravity="right"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:text="Luogo"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:typeface="sans"
                            android:visibility="visible" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/bottomGray"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@color/white_alpha_soft"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:id="@+id/listItemSelector"
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:layout_alignBottom="@+id/linearLayoutListItem"
        android:layout_marginBottom="10dp"
        android:background="@layout/imageview_selected"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/LayoutSeparatorBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/listItemSelector"
        android:layout_alignParentLeft="true"
        android:background="@color/light_gray_alpha"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textViewSeparatorDayBottom"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/red"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="Wednesday"
            android:textColor="@color/light_light_gray"
            android:textSize="15sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/textViewSeparatorMonthBottom"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewSeparatorDayBottom"
            android:background="@color/red"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="Jul 11"
            android:textColor="@color/light_light_gray"
            android:textSize="15sp"
            android:textStyle="italic|bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewParentPage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/listItemSelector"
        android:layout_margin="8dp"
        android:background="@android:color/background_light"
        android:contentDescription="@android:drawable/alert_light_frame"
        android:maxWidth="100dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_other_events"
        android:visibility="gone" />

</RelativeLayout>