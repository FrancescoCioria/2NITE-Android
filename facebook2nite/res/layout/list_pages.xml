<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@layout/gradient_item"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageViewPage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_other_events" />

    <TextView
        android:id="@+id/textViewListPages"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textViewListPagesFanCount"
        android:layout_toRightOf="@+id/imageViewPage"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingLeft="8dp"
        android:text="hello"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewListPagesFanCount"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/imageViewStar"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="hello"
        android:textColor="@color/android_gray"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/imageViewTriangle"
        android:layout_width="13dp"
        android:layout_height="13dp"
       
        android:layout_marginTop="51dp"
        android:layout_marginLeft="52dp"
        android:scaleType="centerCrop"
        android:src="@drawable/triangle" />

    <ImageView
        android:id="@+id/imageViewStar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp" />

</RelativeLayout>